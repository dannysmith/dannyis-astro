---
/**
 * SpacingScale - Visual representation of spacing tokens
 * Used in the styleguide to display the spacing scale
 */

const baseTokens = [
  { name: '3xs', variable: '--space-3xs' },
  { name: '2xs', variable: '--space-2xs' },
  { name: 'xs', variable: '--space-xs' },
  { name: 's', variable: '--space-s' },
  { name: 'm', variable: '--space-m' },
  { name: 'l', variable: '--space-l' },
  { name: 'xl', variable: '--space-xl' },
  { name: '2xl', variable: '--space-2xl' },
  { name: '3xl', variable: '--space-3xl' },
];

const fluidPairs = [
  { variable: '--space-3xs-2xs', from: '3xs', to: '2xs' },
  { variable: '--space-2xs-xs', from: '2xs', to: 'xs' },
  { variable: '--space-xs-s', from: 'xs', to: 's' },
  { variable: '--space-s-m', from: 's', to: 'm' },
  { variable: '--space-m-l', from: 'm', to: 'l' },
  { variable: '--space-l-xl', from: 'l', to: 'xl' },
  { variable: '--space-xl-2xl', from: 'xl', to: '2xl' },
  { variable: '--space-2xl-3xl', from: '2xl', to: '3xl' },
];
---

<div class="spacing-scale">
  <h4>Base Scale</h4>
  <div class="spacing-list">
    {
      baseTokens.map(({ name, variable }) => (
        <div class="spacing-item">
          <span class="spacing-name">{name}</span>
          <div class="spacing-bar" style={`width: var(${variable})`} />
          <code class="spacing-variable">{variable}</code>
        </div>
      ))
    }
  </div>

  <h4>Fluid Pairs</h4>
  <p>
    Fluid pairs smoothly interpolate between two base sizes as the viewport changes. Use these when
    you want spacing that feels proportionally correct at any screen size — small on mobile, larger
    on desktop — without jarring breakpoints.
  </p>
  <table class="fluid-pairs-table">
    <thead>
      <tr>
        <th>Variable</th>
        <th>From</th>
        <th>To</th>
      </tr>
    </thead>
    <tbody>
      {
        fluidPairs.map(({ variable, from, to }) => (
          <tr>
            <td><code>{variable}</code></td>
            <td>{from}</td>
            <td>{to}</td>
          </tr>
        ))
      }
    </tbody>
  </table>
</div>

<style>
  .spacing-scale {
    font-family: var(--font-ui);
  }

  .spacing-scale h4 {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    margin-top: var(--space-l);
    margin-bottom: var(--space-s);
    border-bottom: none;
    padding-bottom: 0;
  }

  .spacing-scale h4:first-child {
    margin-top: 0;
  }

  .spacing-scale p {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-s);
  }

  .spacing-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .spacing-item {
    display: grid;
    grid-template-columns: 3rem 1fr auto;
    align-items: center;
    gap: var(--space-s);
  }

  .spacing-name {
    font-weight: var(--font-weight-medium);
    font-size: var(--font-size-sm);
  }

  .spacing-bar {
    height: var(--space-s);
    background-color: var(--color-accent);
    border-radius: var(--radius-xs);
    min-width: 4px;
  }

  .spacing-variable {
    font-family: var(--font-code);
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
    white-space: nowrap;
  }

  /* Fluid pairs table */
  .fluid-pairs-table {
    font-size: var(--font-size-sm);
    margin-top: var(--space-s);

    & code {
      font-size: var(--font-size-xs);
    }
  }
</style>
