---
interface Props {
  date: Date
  itemprop?: string
}

const { date, itemprop } = Astro.props
---

<time datetime={date.toISOString()} class="dt-published" itemprop={itemprop}>
  {
    date.toLocaleDateString('en-us', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  }
</time>
