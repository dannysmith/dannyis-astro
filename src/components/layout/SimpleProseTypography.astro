---
export interface Props {
  class?: string;
  [key: string]: any;
}

const { class: className, ...props } = Astro.props;
---

<div class={`simple-prose ${className || ''}`} {...props}>
  <slot />
</div>

<style is:global>
  @layer simple-prose {
    .simple-prose {
      font-family: var(--font-prose);
      font-size: var(--font-size-base);
      font-weight: var(--font-weight-prose);
      line-height: var(--line-height-prose);

      /* Consistent spacing between elements */
      > * + * {
        margin-top: 1.25em;
      }

      /* Blockquotes */
      blockquote {
        border-left: var(--border-width-thick) solid var(--prose-blockquote-border-color);
        padding-left: var(--space-4);
        font-style: italic;
      }

      /* Headings */
      h1,
      h2,
      h3,
      h4,
      h5 {
        margin-top: 2em;
        margin-bottom: 1em;
        line-height: var(--leading-snug);
        font-weight: var(--font-weight-semibold);
        border-bottom: var(--border-width-hairline) solid var(--prose-heading-border-color);
        padding-bottom: 0.3em;
      }

      /* Lists */
      ul,
      ol {
        padding-left: var(--space-4);
        margin-top: var(--space-4);
        margin-bottom: var(--space-4);
      }

      ul {
        list-style-type: 'â€¢';
      }

      li::marker {
        color: var(--prose-list-marker-color);
      }

      li {
        margin-top: var(--space-2);
        padding-left: var(--space-4);
      }

      li:first-child {
        margin-top: 0;
      }

      /* Links */
      a {
        color: var(--prose-link-color);
        text-decoration: underline;
        text-underline-offset: 0.2em;
        transition: color var(--duration-fast) var(--ease-default);
      }

      a:visited {
        color: var(--prose-link-visited-color);
      }

      a:hover,
      a:focus {
        color: var(--prose-link-hover-color);
      }

      /* Inline elements */
      strong {
        font-weight: var(--font-weight-semibold);
      }

      /* Inline Code blocks and kbd*/
      :not(pre) > code,
      kbd {
        font-family: var(--font-code);
        font-size: var(--font-size-sm);
        background-color: var(--color-code-background);
        border: var(--border-width-hairline) solid var(--color-border);
        padding: 0.1em 0.4em;
        border-radius: var(--radius-sm);
      }

      /* Keyboard keys */
      kbd {
        box-shadow: 0 0 0 var(--border-width-thin) var(--color-border);
      }

      /* Images */
      img {
        max-width: 100%;
        height: auto;
        border-radius: var(--radius-sm);
      }
    }
  }
</style>
