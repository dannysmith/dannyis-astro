---
import { Icon } from 'astro-icon/components';
import NavLink from '@components/navigation/NavLink.astro';
import PersonalLogo from '@components/ui/PersonalLogo.astro';
import SocialLinks from '@components/ui/SocialLinks.astro';
const today = new Date();
---

<footer>
  <PersonalLogo />
  <section class="footer-nav-links">
    <ul>
      <li>
        <NavLink href={Astro.site?.href} class="h-card" title="Danny Smith">Home</NavLink>
      </li>
      <li><NavLink href="/writing">Writing</NavLink></li>
      <li><NavLink href="/notes">Notes</NavLink></li>
      <li><NavLink href="/now">Now</NavLink></li>
      <li><NavLink href="/working">Work</NavLink></li>
      <li><NavLink href="/toolbox">Toolbox</NavLink></li>
    </ul>
  </section>
  <SocialLinks />
  <section class="footer-rss-inline">
    <span class="footer-rss-icon-wrapper">
      <Icon name="social/rss" class="footer-rss-icon" />
    </span>
    <a href="/rss.xml">All</a> |
    <a href="/rss/articles.xml">Articles</a> |
    <a href="/rss/notes.xml">Notes</a>
  </section>
  <div class="copyright">
    &copy; {today.getFullYear()} Danny Smith
  </div>
</footer>
<style>
  footer {
    position: relative;
    background-color: var(--color-footer-bg);
    color: var(--color-footer-text);
    border-top: 1rem solid var(--color-footer-border);
    padding: 1rem;
    font-size: clamp(0.8rem, calc(0.6rem + 1vw), 1rem);
  }

  ul {
    padding: 0;
    margin: 0;
  }

  li {
    list-style-type: none;
  }


  .footer-nav-links {
    margin-top: 1em;
    padding-left: 2em;

    li {
      text-transform: uppercase;
      letter-spacing: 0.1ch;
      list-style-type: none;
      padding: 0;
      line-height: 1.65;
    }

    a,
    a:link,
    a:visited {
      padding: 0.5rem;
      text-decoration: none;
      color: var(--color-footer-text);
    }

    a:hover,
    a:active,
    a:focus {
      color: var(--color-footer-link-hover);
    }
  }


  .copyright {
    text-transform: uppercase;
    letter-spacing: 0.1ch;
    font-weight: 200;
    position: absolute;
    right: 1rem;
    top: 1rem;
    writing-mode: vertical-rl;
  }

  .footer-rss-inline {
    position: absolute;
    font-size: 0.7em;
    opacity: 0.7;
    color: inherit;
    left: 3.5rem;
    bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.1ch;
    font-weight: 200;

    a {
      color: inherit;
    }

    a:hover {
      color: var(--color-footer-link-hover);
      opacity: 1;
    }
  }

  .footer-rss-icon-wrapper {
    display: inline-block;
    color: var(--color-accent);
    transform: translateY(0.1em);
  }

  @media (max-width: 600px) {
    footer {
      padding-bottom: 3.5rem;
      min-height: 220px;
    }
    .footer-rss-inline {
      position: static;
      display: block;
      margin-top: 1.5rem;
      text-align: center;
    }
    .footer-nav-links a {
      display: flex;
      align-items: center;
      min-height: 34px;
      padding-top: 6px;
      padding-bottom: 6px;
    }
    .footer-social-links a {
      min-width: 44px;
      min-height: 44px;
    }
  }
</style>
