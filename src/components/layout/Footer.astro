---
import { Icon } from 'astro-icon/components';
import { NavLink } from '@components/navigation/index';
import { PersonalLogo, SocialLinks } from '@components/ui/index';
const today = new Date();
---

<footer class="ui-style dark-surface">
  <PersonalLogo />
  <section class="footer-nav-links all-caps">
    <ul class="list-reset">
      <li>
        <NavLink href={Astro.site?.href} class="h-card" title="Danny Smith">Home</NavLink>
      </li>
      <li><NavLink href="/writing">Writing</NavLink></li>
      <li><NavLink href="/notes">Notes</NavLink></li>
      <li><NavLink href="/now">Now</NavLink></li>
      <li><NavLink href="/working">Work <span class="external-arrow">↗</span></NavLink></li>
      <li><NavLink href="/toolbox">Toolbox <span class="external-arrow">↗</span></NavLink></li>
    </ul>
  </section>
  <section class="footer-rss all-caps">
    <a href="/rss.xml" target="_blank">All</a>
    <span class="footer-rss-separator">|</span>
    <a href="/rss/articles.xml" target="_blank">Articles</a>
    <span class="footer-rss-separator">|</span>
    <a href="/rss/notes.xml" target="_blank">Notes</a>
    <span class="footer-rss-icon-wrapper">
      <Icon name="social/rss" class="footer-rss-icon" />
    </span>
  </section>
  <section class="footer-meta">
    <a href="https://danny.is/key.txt" target="_blank">pgp key</a>
    <span class="footer-meta-separator">·</span>
    <a
      href="https://atproto-browser.vercel.app/at/danny.is"
      rel="me noopener noreferrer"
      target="_blank">atproto at://danny.is</a
    >
  </section>
  <div class="copyright all-caps">
    &copy; {today.getFullYear()} Danny Smith
  </div>
  <SocialLinks />
</footer>

<style>
  footer {
    position: relative;
    border-top: var(--border-width-accent) solid var(--color-accent);
    padding: var(--space-s);
    view-transition-name: site-footer;
  }

  .footer-nav-links {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-regular);
    padding-left: calc(var(--space-s) * 2);

    li {
      margin-top: var(--space-3xs);
      line-height: var(--leading-normal);
    }
  }

  .copyright {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-light);
    position: absolute;
    right: var(--space-s);
    top: var(--space-s);
    writing-mode: vertical-rl;

    @media (max-width: 380px) {
      position: static;
      writing-mode: horizontal-tb;
      text-align: center;
      margin-top: var(--space-m);
    }
  }

  .footer-rss {
    font-size: var(--font-size-sm);
    display: flex;
    padding-left: calc(var(--space-s) * 2);
    gap: var(--space-3xs);
    margin-top: var(--space-m);
  }

  .footer-rss-icon-wrapper {
    color: var(--color-accent);
  }

  .footer-rss-separator {
    color: color-mix(in oklch, currentColor 40%, transparent);
  }

  .footer-meta {
    font-size: var(--font-size-sm);
    display: flex;
    padding-left: calc(var(--space-s) * 2);
    gap: var(--space-3xs);
    margin-top: var(--space-3xs);
    margin-bottom: var(--space-m);
    color: color-mix(in oklch, currentColor 50%, transparent);
  }

  .footer-meta-separator {
    color: color-mix(in oklch, currentColor 60%, transparent);
  }
</style>
