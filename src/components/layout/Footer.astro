---
import { Icon } from 'astro-icon/components';
import NavLink from '@components/navigation/NavLink.astro';
import PersonalLogo from '@components/ui/PersonalLogo.astro';
import SocialLinks from '@components/ui/SocialLinks.astro';
const today = new Date();
---

<footer>
  <PersonalLogo />
  <section class="footer-nav-links">
    <ul>
      <li>
        <NavLink href={Astro.site?.href} class="h-card" title="Danny Smith">Home</NavLink>
      </li>
      <li><NavLink href="/writing">Writing</NavLink></li>
      <li><NavLink href="/notes">Notes</NavLink></li>
      <li><NavLink href="/now">Now</NavLink></li>
      <li><NavLink href="/working">Work</NavLink></li>
      <li><NavLink href="/toolbox">Toolbox</NavLink></li>
    </ul>
  </section>
  <SocialLinks />
  <section class="footer-rss-inline">
    <span class="footer-rss-icon-wrapper">
      <Icon name="social/rss" class="footer-rss-icon" />
    </span>
    <a href="/rss.xml">All</a> |
    <a href="/rss/articles.xml">Articles</a> |
    <a href="/rss/notes.xml">Notes</a>
  </section>
  <div class="copyright">
    &copy; {today.getFullYear()} Danny Smith
  </div>
</footer>
<style>
  footer {
    position: relative;
    background-color: var(--color-footer-bg);
    color: var(--color-footer-text);
    border-top: var(--border-width-accent) solid var(--color-footer-border);
    padding: var(--space-4);
    font-size: var(--font-size-sm);
  }

  ul {
    padding: 0;
    margin: 0;
  }

  li {
    list-style-type: none;
  }


  .footer-nav-links {
    margin-top: 1em;
    padding-left: var(--space-6);

    li {
      text-transform: uppercase;
      letter-spacing: var(--tracking-wider);
      list-style-type: none;
      padding: 0;
      line-height: var(--leading-relaxed);
    }

    a,
    a:link,
    a:visited {
      padding: var(--space-2);
      text-decoration: none;
      color: var(--color-footer-text);
      transition: color var(--duration-fast) var(--ease-default);
    }

    a:hover,
    a:active,
    a:focus {
      color: var(--color-footer-link-hover);
    }
  }


  .copyright {
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    font-weight: var(--font-weight-light);
    position: absolute;
    right: var(--space-4);
    top: var(--space-4);
    writing-mode: vertical-rl;
  }

  .footer-rss-inline {
    position: absolute;
    font-size: var(--font-size-xs);
    opacity: 0.7;
    color: inherit;
    left: var(--space-10);
    bottom: var(--space-4);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    font-weight: var(--font-weight-light);

    a {
      color: inherit;
      transition: color var(--duration-fast) var(--ease-default);
    }

    a:hover {
      color: var(--color-footer-link-hover);
      opacity: 1;
    }
  }

  .footer-rss-icon-wrapper {
    display: inline-block;
    color: var(--color-accent);
    transform: translateY(0.1em);
  }

  @media (max-width: 600px) {
    footer {
      padding-bottom: var(--space-10);
      min-height: 220px;
    }
    .footer-rss-inline {
      position: static;
      display: block;
      margin-top: var(--space-5);
      text-align: center;
    }
    .footer-nav-links a {
      display: flex;
      align-items: center;
      min-height: 44px; /* Touch target */
      padding-block: var(--space-2);
    }
    .footer-social-links a {
      min-width: 44px; /* Touch target */
      min-height: 44px;
    }
  }
</style>
