---
import { Icon } from 'astro-icon/components';

export interface Props {
  title?: string;
  type?: 'default' | 'red' | 'blue' | 'green' | 'orange' | 'yellow' | 'purple';
  icon?: string;
  emoji?: string;
}

const { title, icon, emoji, type = 'default' } = Astro.props;

if (icon && emoji) {
  throw new Error('Callout: Cannot use both icon and emoji props. Use either icon (for astro-icons) or emoji (for text emojis).');
}
---

<aside aria-label={title} class="callout" data-callout-color={type}>
  {
    (icon || emoji) && (
      <div class="icon-wrapper">
        <div class="icon">
          {icon ? <Icon name={icon} /> : emoji}
        </div>
      </div>
    )
  }
  <div class="content-wrapper">
    {title && <h3 class="title">{title}</h3>}
    <div class="content">
      <slot />
    </div>
  </div>
</aside>

<style>
  .callout {
    display: flex;
    background: var(--color-callout-default-bg);
    padding: var(--space-4);
    border-radius: var(--radius-sm);
    margin: var(--space-4) 0;
  }

  .icon-wrapper {
    flex-shrink: 0;
    margin-right: var(--space-3);
  }

  .icon {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--font-size-sm);
    line-height: 1;
    margin-top: 0.35rem;
  }

  .content-wrapper {
    flex-grow: 1;
    min-width: 0; /* Defensive: allow shrinking */
    max-width: 100%;
  }

  .title {
    margin: 0 0 var(--space-2) 0;
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    line-height: var(--leading-normal);
  }

  .content {
    margin: 0;
  }

  .content > :first-child {
    margin-top: 0;
  }

  .content > :last-child {
    margin-bottom: 0;
  }

  /* Color variants using semantic color system */
  [data-callout-color='red'] {
    background: var(--color-callout-red-bg);
  }

  [data-callout-color='blue'] {
    background: var(--color-callout-blue-bg);
  }

  [data-callout-color='green'] {
    background: var(--color-callout-green-bg);
  }

  [data-callout-color='orange'] {
    background: var(--color-callout-orange-bg);
  }

  [data-callout-color='yellow'] {
    background: var(--color-callout-yellow-bg);
  }

  [data-callout-color='purple'] {
    background: var(--color-callout-purple-bg);
  }
</disabled-style>
