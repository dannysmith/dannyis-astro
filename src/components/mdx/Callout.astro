---
import { Icon } from 'astro-icon/components';

export interface Props {
  title?: string;
  type?: 'default' | 'red' | 'blue' | 'green' | 'orange' | 'yellow' | 'purple';
  icon?: string;
  emoji?: string;
}

const { title, icon, emoji, type = 'default' } = Astro.props;

if (icon && emoji) {
  throw new Error('Callout: Cannot use both icon and emoji props. Use either icon (for astro-icons) or emoji (for text emojis).');
}
---

<aside aria-label={title} class="callout" data-callout-color={type}>
  {
    (icon || emoji) && (
      <div class="icon-wrapper">
        <div class="icon">
          {icon ? <Icon name={icon} /> : emoji}
        </div>
      </div>
    )
  }
  <div class="content-wrapper">
    {title && <h3 class="title">{title}</h3>}
    <div class="content">
      <slot />
    </div>
  </div>
</aside>

<style>
  .callout {
    --_bg: var(--color-background-secondary);
    --_border: var(--color-text-secondary);

    display: flex;
    background: var(--_bg);
    border-inline-start: var(--border-width-thick) solid var(--_border);
    padding: var(--space-s);
    border-radius: var(--radius-sm);
  }

  .icon-wrapper {
    flex-shrink: 0;
    margin-inline-end: var(--space-xs);
  }

  .icon {
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--font-size-sm);
    line-height: 1;
    margin-top: 0.3em;
  }

  .content-wrapper {
    flex-grow: 1;
    min-width: 0;
  }

  .title {
    margin: 0 0 var(--space-2xs) 0;
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    line-height: var(--leading-snug);
    border-bottom: none;
    padding-bottom: 0;
  }

  .content {
    & > :first-child {
      margin-top: 0;
    }

    & > :last-child {
      margin-bottom: 0;
    }
  }

  /* Color variants - muted tinted backgrounds with accent borders
     Light mode: ~93-96% lightness, very low chroma (0.015-0.04)
     Dark mode: ~35-42% lightness, low chroma (0.02-0.05) */
  [data-callout-color='red'] {
    --_bg: light-dark(
      oklch(94% 0.024 var(--hue-coral)),
      oklch(35% 0.036 var(--hue-coral))
    );
    --_border: var(--color-coral);
  }

  [data-callout-color='blue'] {
    --_bg: light-dark(
      oklch(93.5% 0.016 var(--hue-blue)),
      oklch(35% 0.026 var(--hue-blue))
    );
    --_border: var(--color-blue);
  }

  [data-callout-color='green'] {
    --_bg: light-dark(
      oklch(94% 0.014 var(--hue-green)),
      oklch(36% 0.022 var(--hue-green))
    );
    --_border: var(--color-green);
  }

  [data-callout-color='orange'] {
    --_bg: light-dark(
      oklch(95% 0.035 var(--hue-orange)),
      oklch(38% 0.044 var(--hue-orange))
    );
    --_border: var(--color-orange);
  }

  [data-callout-color='yellow'] {
    --_bg: light-dark(
      oklch(96.5% 0.038 var(--hue-yellow)),
      oklch(42% 0.052 var(--hue-yellow))
    );
    --_border: var(--color-yellow);
  }

  [data-callout-color='purple'] {
    --_bg: light-dark(
      oklch(94% 0.02 var(--hue-purple)),
      oklch(35% 0.03 var(--hue-purple))
    );
    --_border: var(--color-purple);
  }
</style>
