---
export interface Props {
  columns?: number
  rows?: number
  gap?: string
}
const columns = Astro.props.columns || 2
const rows = Astro.props.rows || 1
const gap = Astro.props.gap || 'var(--space-s)'
---

<div class="grid-wrapper">
  <slot />
</div>

<style define:vars={{ columns, rows, gap }}>
  .grid-wrapper {
    display: grid;
    /* Responsive: never create columns narrower than 200px */
    grid-template-columns: repeat(auto-fit, minmax(min(200px, 100% / var(--columns)), 1fr));
    grid-template-rows: repeat(var(--rows), 1fr);
    grid-gap: var(--gap);
  }
</style>
