---
import { fetchLinkMetadata } from '@utils/fetchLinkMetadata';

export interface Props {
	url: string;
	className?: string;
}

const { url, className = '' } = Astro.props;

// Fetch metadata at build time
const metadata = await fetchLinkMetadata(url);

// If metadata fetch fails, provide a minimal fallback
const fallbackMetadata = {
	url,
	domain: new URL(url).hostname.replace('www.', ''),
	title: url,
	description: null,
	image: null,
};

const data = metadata || fallbackMetadata;
const isFallback = !metadata;
---

<div class={`bookmark-card ${className}`}>
	<a href={url} class="link-preview" target="_blank" rel="noopener noreferrer">
		<div class="link-preview__content">
			<span class="link-preview__domain">{data.domain}</span>
			<span class="link-preview__title">{data.title}</span>
			{data.description && <p class="link-preview__description">{data.description}</p>}
			{
				isFallback && (
					<p class="link-preview__fallback-notice">Preview unavailable - click to visit</p>
				)
			}
		</div>
		{data.image && <img src={data.image} alt="" loading="lazy" />}
	</a>
</div>

<style>
	.bookmark-card {
		width: 100%;
		max-width: 100%;
		container-type: inline-size;
	}

	.bookmark-card .link-preview {
		width: 100%;
		display: block;
		background: var(--color-bg-secondary);
		border: 1px solid var(--color-border);
		border-radius: 0.2rem;
		overflow: hidden;
		box-shadow:
			0 1px 3px 0 rgba(0, 0, 0, 0.1),
			0 1px 2px 0 rgba(0, 0, 0, 0.06);
		transition: all 0.2s ease;
		text-decoration: none;
		color: inherit;
	}

	.bookmark-card .link-preview:hover {
		border-color: var(--color-accent);
		box-shadow:
			0 4px 6px -1px rgba(0, 0, 0, 0.1),
			0 2px 4px -1px rgba(0, 0, 0, 0.06);
	}

	.bookmark-card .link-preview__content {
		padding: 1em;
	}

	.bookmark-card .link-preview__domain {
		font-family: var(--font-code);
		color: var(--color-text-secondary);
		font-size: 0.8rem;
		font-weight: 400;
		margin-bottom: 6px;
		display: block;
	}

	.bookmark-card .link-preview__title {
		color: var(--color-accent);
		font-size: 1rem;
		font-weight: 600;
		line-height: 1.4;
		text-decoration: none;
		margin-bottom: 8px;
		display: block;
		overflow: hidden;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		transition: color 0.2s ease;
	}

	.bookmark-card .link-preview__description {
		color: var(--color-text-secondary);
		font-size: 0.875rem;
		line-height: 1.5;
		overflow: hidden;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		margin: 0;
	}

	.bookmark-card .link-preview__fallback-notice {
		color: var(--color-text-tertiary);
		font-size: 0.75rem;
		font-style: italic;
		margin-top: 8px;
		margin-bottom: 0;
	}

	.bookmark-card .link-preview img {
		width: 100%;
		max-width: 100%;
		height: auto;
		object-fit: cover;
		display: block;
	}

	.bookmark-card .link-preview:focus-visible {
		outline: 2px solid var(--color-accent);
		outline-offset: 2px;
	}

	/* Default: stacked layout (block) */
	.bookmark-card .link-preview {
		display: block;
	}

	/* Container query: horizontal layout if container is wide enough */
	@container (min-width: 400px) {
		.bookmark-card .link-preview {
			display: flex;
			flex-direction: row;
			align-items: stretch;
			min-height: 120px;
		}
		.bookmark-card .link-preview__content {
			flex: 1;
			padding: 20px;
			display: flex;
			flex-direction: column;
			justify-content: space-between;
		}
		.bookmark-card .link-preview img {
			width: 160px;
			max-width: 160px;
			height: auto;
			min-height: 120px;
			object-fit: cover;
			flex-shrink: 0;
			order: 2;
		}
		.bookmark-card .link-preview__title {
			margin-bottom: 6px;
			-webkit-line-clamp: 2;
		}
		.bookmark-card .link-preview__description {
			-webkit-line-clamp: 2;
			flex-grow: 1;
		}
	}
</style>
