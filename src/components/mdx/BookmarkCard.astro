---
import { fetchLinkMetadata } from '@utils/fetchLinkMetadata';

export interface Props {
	url: string;
	className?: string;
}

const { url, className = '' } = Astro.props;

// Fetch metadata at build time
const metadata = await fetchLinkMetadata(url);

// If metadata fetch fails, provide a minimal fallback
const fallbackMetadata = {
	url,
	domain: new URL(url).hostname.replace('www.', ''),
	title: url,
	description: null,
	image: null,
};

const data = metadata || fallbackMetadata;
const isFallback = !metadata;
---

<div class={`bookmark-card ${className}`}>
	<a href={url} class="link-preview" target="_blank" rel="noopener noreferrer">
		<div class="link-preview__content">
			<span class="link-preview__domain">{data.domain}</span>
			<span class="link-preview__title">{data.title}</span>
			{data.description && <p class="link-preview__description">{data.description}</p>}
			{
				isFallback && (
					<p class="link-preview__fallback-notice">Preview unavailable - click to visit</p>
				)
			}
		</div>
		{data.image && <img src={data.image} alt="" loading="lazy" />}
	</a>
</div>

<style>
	.bookmark-card {
		container-type: inline-size;
	}

	.link-preview {
		display: block;
		background: var(--surface-raised);
		border: var(--border-width-hairline) solid var(--color-border);
		border-radius: var(--radius-sm);
		overflow: hidden;
		filter: var(--shadow-small);
		text-decoration: none;
		color: inherit;
		transition:
			filter var(--duration-normal) var(--ease-in-out),
			border-color var(--duration-normal) var(--ease-in-out);

		&:hover {
			border-color: var(--color-accent);
			filter: var(--shadow-medium);
		}

		&:focus-visible {
			outline: var(--border-width-base) solid var(--color-accent);
			outline-offset: 3px;
		}
	}

	.link-preview__content {
		padding: var(--space-s);
	}

	.link-preview__domain {
		display: block;
		font-family: var(--font-code);
		font-size: var(--font-size-xs);
		color: var(--color-text-secondary);
		margin-block-end: var(--space-2xs);
	}

	.link-preview__title {
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
		font-size: var(--font-size-base);
		font-weight: var(--font-weight-semibold);
		line-height: var(--leading-snug);
		color: var(--color-accent);
		margin-block-end: var(--space-2xs);
	}

	.link-preview__description {
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
		font-size: var(--font-size-sm);
		line-height: var(--leading-normal);
		color: var(--color-text-secondary);
		margin: 0;
	}

	.link-preview__fallback-notice {
		font-size: var(--font-size-xs);
		font-style: italic;
		color: var(--color-text-secondary);
		margin-block: var(--space-2xs) 0;
	}

	.link-preview img {
		display: block;
		width: 100%;
		height: auto;
		object-fit: cover;
	}

	/* Horizontal layout when container is wide enough */
	@container (min-width: 400px) {
		.link-preview {
			display: flex;
			align-items: stretch;
			min-height: 120px;
		}

		.link-preview__content {
			flex: 1;
			padding: var(--space-m);
			display: flex;
			flex-direction: column;
			justify-content: center;
		}

		.link-preview__description {
			flex-grow: 1;
		}

		.link-preview img {
			width: 160px;
			min-height: 120px;
			flex-shrink: 0;
			order: 2;
		}
	}
</style>
