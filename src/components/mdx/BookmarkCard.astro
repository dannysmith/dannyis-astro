---
import { fetchLinkMetadata } from '@utils/fetchLinkMetadata';

export interface Props {
	url: string;
	className?: string;
}

const { url, className = '' } = Astro.props;

// Fetch metadata at build time
const metadata = await fetchLinkMetadata(url);

// If metadata fetch fails, provide a minimal fallback
const fallbackMetadata = {
	url,
	domain: new URL(url).hostname.replace('www.', ''),
	title: url,
	description: null,
	image: null,
};

const data = metadata || fallbackMetadata;
const isFallback = !metadata;
---

<div class={`bookmark-card ${className}`}>
	<a href={url} class="link-preview" target="_blank" rel="noopener noreferrer">
		<div class="link-preview__content">
			<span class="link-preview__domain">{data.domain}</span>
			<span class="link-preview__title">{data.title}</span>
			{data.description && <p class="link-preview__description">{data.description}</p>}
			{
				isFallback && (
					<p class="link-preview__fallback-notice">Preview unavailable - click to visit</p>
				)
			}
		</div>
		{data.image && <img src={data.image} alt="" loading="lazy" />}
	</a>
</div>

<style>
	.bookmark-card {
		width: 100%;
		max-width: 100%;
		container-type: inline-size;
	}

	.bookmark-card .link-preview {
		width: 100%;
		display: block;
		background: var(--color-bg-secondary);
		border: var(--border-width-hairline) solid var(--color-border);
		border-radius: var(--radius-sm);
		overflow: hidden;
		filter: var(--elevation-low);
		transition: all var(--duration-normal) var(--ease-default);
		text-decoration: none;
		color: inherit;
	}

	.bookmark-card .link-preview:hover {
		border-color: var(--color-accent);
		filter: var(--elevation-medium);
	}

	.bookmark-card .link-preview__content {
		padding: var(--space-4);
	}

	.bookmark-card .link-preview__domain {
		font-family: var(--font-code);
		color: var(--color-text-secondary);
		font-size: var(--font-size-xs);
		font-weight: var(--font-weight-regular);
		margin-bottom: var(--space-2);
		display: block;
	}

	.bookmark-card .link-preview__title {
		color: var(--color-accent);
		font-size: var(--font-size-base);
		font-weight: var(--font-weight-semibold);
		line-height: var(--leading-snug);
		text-decoration: none;
		margin-bottom: var(--space-2);
		display: block;
		overflow: hidden;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		transition: color var(--duration-normal) var(--ease-default);
	}

	.bookmark-card .link-preview__description {
		color: var(--color-text-secondary);
		font-size: var(--font-size-sm);
		line-height: var(--leading-normal);
		overflow: hidden;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		margin: 0;
	}

	.bookmark-card .link-preview__fallback-notice {
		color: var(--color-text-tertiary);
		font-size: var(--font-size-xs);
		font-style: italic;
		margin-top: var(--space-2);
		margin-bottom: 0;
	}

	.bookmark-card .link-preview img {
		width: 100%;
		max-width: 100%;
		height: auto;
		object-fit: cover;
		display: block;
	}

	.bookmark-card .link-preview:focus-visible {
		outline: var(--border-width-base) solid var(--color-accent);
		outline-offset: var(--space-1);
	}

	/* Default: stacked layout (block) */
	.bookmark-card .link-preview {
		display: block;
	}

	/* Container query: horizontal layout if container is wide enough */
	@container (min-width: 400px) {
		.bookmark-card .link-preview {
			display: flex;
			flex-direction: row;
			align-items: stretch;
			min-height: 120px;
		}
		.bookmark-card .link-preview__content {
			flex: 1;
			padding: var(--space-5);
			display: flex;
			flex-direction: column;
			justify-content: space-between;
		}
		.bookmark-card .link-preview img {
			width: 160px;
			max-width: 160px;
			height: auto;
			min-height: 120px;
			object-fit: cover;
			flex-shrink: 0;
			order: 2;
		}
		.bookmark-card .link-preview__title {
			margin-bottom: var(--space-2);
			-webkit-line-clamp: 2;
		}
		.bookmark-card .link-preview__description {
			-webkit-line-clamp: 2;
			flex-grow: 1;
		}
	}
</disabled-style>
