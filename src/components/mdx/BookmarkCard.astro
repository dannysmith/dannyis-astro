---
import { fetchLinkMetadata } from '@utils/fetchLinkMetadata';

export interface Props {
  url: string;
  className?: string;
}

const { url, className = '' } = Astro.props;

// Fetch metadata at build time
const metadata = await fetchLinkMetadata(url);

// If metadata fetch fails, provide a minimal fallback
let domain: string | null = null;
try {
  domain = new URL(url).hostname.replace('www.', '');
} catch {
  // Malformed URL - leave domain as null
}

const fallbackMetadata = {
  url,
  domain,
  title: url,
  description: null,
  image: null,
};

const data = metadata || fallbackMetadata;
const isFallback = !metadata;
---

<div class={`bookmark-card cq ${className}`}>
  <a href={url} class="bookmark-link" target="_blank" rel="noopener noreferrer">
    <div class="bookmark-content">
      <span class="bookmark-title">{data.title}</span>
      {data.description && <p class="bookmark-description">{data.description}</p>}
      {data.domain && <span class="bookmark-domain">{data.domain}</span>}
      {isFallback && <p class="bookmark-fallback">Preview unavailable - click to visit</p>}
    </div>
    {data.image && <img src={data.image} alt="" loading="lazy" />}
  </a>
</div>

<style>
  .bookmark-link {
    display: block;
    overflow: hidden;
    text-decoration: none;
    color: inherit;

    background-color: var(--color-background-secondary);
    border: var(--border-width-hairline) solid var(--color-border);
    border-radius: var(--radius-sm);
    transition: border-color var(--duration-normal) var(--ease-in-out);

    &:hover {
      border-color: var(--color-accent);
    }

    img {
      width: 100%;
      object-fit: cover;
    }
  }

  .bookmark-content {
    padding: var(--space-s);
  }

  .bookmark-domain {
    display: block;
    font-family: var(--font-code);
    font-size: var(--font-size-xs);
    margin-block-start: var(--space-2xs);
  }

  .bookmark-title {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    line-height: var(--leading-snug);
    color: var(--color-accent);
    margin-block-end: var(--space-2xs);
    word-break: break-word;
  }

  .bookmark-description {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    font-size: var(--font-size-sm);
    line-height: var(--leading-normal);
    margin: 0;
  }

  .bookmark-fallback {
    font-size: var(--font-size-xs);
    font-style: italic;
    margin-block: var(--space-2xs) 0;
  }

  /* Horizontal layout when container is wide enough */
  @container (min-width: 400px) {
    .bookmark-link {
      display: flex;
      align-items: stretch;
      min-height: var(--space-2xl);

      img {
        width: max(30cqi, calc(var(--space-2xl) * 2));
        aspect-ratio: 16 / 9;
        flex-shrink: 0;
        order: 2;
      }
    }

    .bookmark-content {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
  }
</style>
