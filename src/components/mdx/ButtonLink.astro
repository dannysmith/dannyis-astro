---
interface Props {
  href: string;
  variant?: 'primary' | 'secondary';
}

const { href, variant = 'primary' } = Astro.props;
---

<div class="button-link-container">
  <a href={href} class:list={['button-link', variant]}>
    <slot />
  </a>
</div>

<style>
  .button-link-container {
    margin: var(--space-8) auto;
    text-align: center;
  }

  .button-link {
    display: inline-block;
    padding: var(--space-3) var(--space-6);
    border-radius: var(--radius-lg);
    font-family: var(--font-ui);
    font-weight: var(--font-weight-semibold);
    text-decoration: none;
    border: var(--border-width-base) solid transparent;
    transition: background-color var(--duration-fast) var(--ease-default);
  }

  .button-link:focus-visible {
    outline: var(--border-width-base) solid var(--color-accent);
    outline-offset: var(--space-1);
  }

  .button-link.primary {
    background: var(--color-button-primary-bg);
    color: var(--color-button-primary-text);
  }
  .button-link.primary:hover {
    background: var(--color-button-primary-hover-bg);
  }

  .button-link.secondary {
    background: var(--color-button-secondary-bg);
    color: var(--color-button-secondary-text);
    border-color: var(--color-button-secondary-border);
  }
  .button-link.secondary:hover {
    background: var(--color-button-secondary-hover-bg);
    color: var(--color-button-secondary-hover-text);
  }
</style>
