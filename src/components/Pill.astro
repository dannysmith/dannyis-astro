---
export interface Props {
  text: string;
  color?: string;
  textColor?: string;
}

const { text, color = 'var(--color-grey-700)', textColor = 'white' } = Astro.props;
---

<span class="pill" style={`--pill-color: ${color}; --pill-text-color: ${textColor}`}>
  {text}
</span>

<style>
  .pill {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.4em 0.7em 0.15em 0.7em;
    border-radius: 0.18rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    line-height: 1;
    background: var(--pill-color);
    color: var(--pill-text-color);
    border: 1px solid var(--pill-color);
  }
</style>
