---
import FormattedDate from '@components/FormattedDate.astro';
import Embed from '@components/Embed.astro';
import Pill from '@components/Pill.astro';

export interface Props {
  title: string;
  pubDate: Date;
  sourceURL?: string;
  tags?: string[];
}

const { title, pubDate, sourceURL, tags = [] } = Astro.props;
---

<article class="note h-entry cq">
  <header class="note-header">
    <time class="date" datetime={pubDate.toISOString()}>
      <FormattedDate date={pubDate} />
    </time>
    <h1 class="p-name">{title}</h1>
    {
      tags.length > 0 && (
        <div class="tags">
          {tags.map(tag => (
            <Pill text={tag} />
          ))}
        </div>
      )
    }
  </header>
  {
    sourceURL && (
      <div class="source-url">
        <Embed url={sourceURL} />
      </div>
    )
  }
  <div class="note-content prose p-content">
    <slot />
  </div>
</article>

<style>
  .note {
    --line-height: calc(1.8 * 1rem);
    width: 100%;
    background: var(--color-note-bg);
    padding: var(--line-height);
    background-image: radial-gradient(var(--color-note-dot-grid) 0.5px, transparent 0);
    background-size: 1rem 1rem;
    filter: var(--shadow-medium);
    border-top: 1rem solid var(--color-note-border);
    border-radius: 0.2rem;
  }

  .note-header {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .date {
    font-size: 0.7rem;
    color: var(--color-note-date);
    text-transform: uppercase;
    letter-spacing: 0.1ch;
  }

  h1 {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    line-height: 1.2;
    font-weight: 600;
    margin: 0;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-note-title-underline);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    line-height: 1;
  }

  .source-url {
    margin-top: var(--line-height);
  }

  .note-content {
    margin-top: var(--line-height);
  }

  /* Container query styles */
  @container (width > 600px) {
    .note {
      --line-height: calc(2 * 1rem);
      padding: calc(var(--line-height) * 1.5);
    }

    .date {
      font-size: 0.8rem;
    }
  }

  @container (width > 800px) {
    .note {
      --line-height: calc(2.2 * 1rem);
      padding: calc(var(--line-height) * 2);
    }
  }
</style>
