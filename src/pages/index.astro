---
import BaseHead from '@components/layout/BaseHead.astro';
import MainNavigation from '@components/layout/MainNavigation.astro';
import { Image } from 'astro:assets';
import { SITE_TITLE, SITE_DESCRIPTION } from '@config/seo';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body itemtype="https://schema.org/ProfilePage" itemscope>
    <MainNavigation />
    <main class="vcard h-card ui-style" itemtype="http://schema.org/Person" itemprop="mainEntity" itemscope>
      <a rel="me" href={Astro.site?.href} class="u-url u-uid hidden-microformat">Danny Smith</a>
      <h1 class="fn p-name" itemprop="name">
        <span itemprop="givenName">Danny</span>
        <span itemprop="familyName">Smith</span>
      </h1>
      <ul class="link-list list-reset all-caps">
        <li>
          <a href="/writing"><strong>writing</strong></a>
        </li>
        <li>
          <a href="/notes"><strong>notes</strong></a>
        </li>
        <li>
          <a href="/toolbox"><strong>remote working</strong> <span>toolbox</span></a>
        </li>
        <li>
          <a href="/youtube"><strong>youtube</strong></a>
        </li>
        <li>
          <a href="/using">stuff I'm <strong>using</strong></a>
        </li>
        <li>
          <a href="/music">my <b>music</b></a>
        </li>
        <li>
          <a href="https://www.linkedin.com/in/dannyasmith" rel="me" target="_blank"
            ><strong>linkedin</strong><span>/dannyasmith</span></a
          >
        </li>
        <li>
          <a href="https://bsky.app/profile/danny.is" rel="me" target="_blank">
            <strong>BlueSky</strong><span>@danny.is</span>
          </a>
        </li>
        <li>
          <a href="https://indieweb.social/@dannysmith" rel="me" target="_blank">
            <strong>Mastodon</strong><span>@dannyasmith@indieweb.social</span>
          </a>
        </li>
        <li>
          <a href="https://medium.com/@dannysmith" rel="me" target="_blank"
            ><strong>medium</strong><span>/dannysmith</span></a
          >
        </li>
        <li>
          <a href="https://github.com/dannysmith" rel="me" target="_blank"
            ><strong>github</strong><span>/dannysmith</span></a
          >
        </li>
        <li>
          <a href="https://instagram.com/dannysmith" rel="me" target="_blank"
            ><strong>instagram</strong><span>/dannysmith</span></a
          >
        </li>
        <li>
          <a href="https://monzo.me/dannyasmith" rel="me" target="_blank"
            ><strong>monzo</strong><span>.me</span></a
          >
        </li>
        <li>
          <a class="u-email p-email" href="mailto:hi+website@danny.is" rel="me" itemprop="email"
            ><strong>email</strong></a
          >
        </li>
        <li>
          <a href="https://atproto-browser.vercel.app/at/danny.is" rel="me" target="_blank"
            >at://danny.is</a
          >
        </li>
      </ul>
      <Image
        src="/icon.jpg"
        alt="Danny Smith Profile Image"
        class="avatar u-photo"
        loading="lazy"
        width={200}
        height={200}
        format="webp"
        quality={85}
        itemprop="image"
      />

<style>
        main {
          display: grid;
          grid-template-columns: 1rem auto 1fr;
        }

        h1 {
          grid-column: 1 / -1;
          font-size: clamp(3rem, 15.742vw, 22rem);
          font-weight: var(--font-weight-bold);
          text-transform: uppercase;
          margin-top: -0.1em;
          pointer-events: none;
          line-height: var(--leading-none);
        }

        .link-list {
          grid-column: 2 / 3;
          min-width: 0;

          & li {
            border-bottom: var(--border-width-thick) solid var(--color-accent);
            line-height: var(--leading-none);
            padding-block: var(--space-3xs);
            text-box: trim-both cap alphabetic;
          }

          & a {
            overflow-wrap: break-word;
            word-break: break-word;
          }

          & strong {
            letter-spacing: var(--tracking-wider);
          }
        }

        .avatar {
          display: none;
        }

        @media (max-width: 500px) {
          main {
            grid-template-columns: 1fr;
            padding-inline: var(--space-s);
          }

          .link-list {
            grid-column: 1;


            & a {
              display: flex;
              flex-wrap: wrap;
              min-height: var(--space-l);
              align-items: end;
            }
          }
        }
      </style>
    </main>
  </body>
</html>
