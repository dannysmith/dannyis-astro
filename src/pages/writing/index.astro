---
import BaseHead from '@components/BaseHead.astro'
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts'
import { getCollection } from 'astro:content'
import FormattedDate from '@components/FormattedDate.astro'

const posts = (
  await await getCollection('blog', ({ data }) => {
    return import.meta.env.PROD ? data.draft !== true : true
  })
).sort((b, a) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf())
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <main>
      <h1 class="title">Writing</h1>
      <section>
        <ul>
          {
            posts.map((post) => (
              <li>
                <a href={`/writing/${post.slug}/`}>
                  <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                  <h4 class="post-title">{post.data.title}</h4>
                  {post.data.platform && (
                    <p class="platform">{post.data.platform}</p>
                  )}
                  {post.data.draft && <p class="draft-marker">ðŸš§</p>}
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <style>
      .title {
        text-transform: uppercase;
        font-size: 14vw;
        transform: translateY(-0.3em);
        text-align: right;
        pointer-events: none;
      }

      ul {
        list-style: none;
        margin: 0;
        padding: 0;
      }

      li {
        margin-bottom: 1rem;
        background: pink;
      }

      a {
        display: flex;
        align-items: baseline;
        gap: 1rem;
        text-decoration: none;
      }
      .date {
        font-size: 0.8rem;
        color: var(--color--grey--600);
      }
      .draft-marker {
        background: var(--color-bg-dark-200);
        border-radius: 5px;
        padding: 0 5px;
      }
    </style>
  </body>
</html>
