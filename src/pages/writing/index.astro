---
import BaseHead from '@components/layout/BaseHead.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '@components/ui/FormattedDate.astro';
import Footer from '@components/layout/Footer.astro';
import MainNavigation from '@components/layout/MainNavigation.astro';
import Pill from '@components/ui/Pill.astro';
import { filterContentForListing } from '@utils/content';

const posts = filterContentForListing(await getCollection('articles')).sort(
  (b, a) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title="Articles"
      description="In-depth articles on remote work, organizational health, leadership, and business operations by consultant Danny Smith"
      pageType="page"
    />
  </head>
  <body>
    <MainNavigation />
    <main class="ui-style">
      <h1 class="title">Writing</h1>
      <section>
        <ul>
          {
            posts.map(post => (
              <li>
                <a href={`/writing/${post.id}/`}>
                  <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                  <h4 class="post-title">
                    {post.data.title}
                    {post.data.draft && <span class="draft-marker"> ðŸš§</span>}
                    {post.data.platform && (
                      <Pill
                        text={post.data.platform}
                        color="var(--color-writinglist-platform-label)"
                        textColor="var(--color-brand-white)"
                      />
                    )}
                  </h4>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
    <style>
      body {
        display: grid;
        grid-template-rows: auto min-content;
      }

      section {
        padding: var(--space-4);
      }

      .title {
        text-transform: uppercase;
        font-size: clamp(3rem, 14vw, 20rem);
        transform: translateY(-0.3em);
        text-align: right;
        pointer-events: none;
      }

      ul {
        list-style: none;
        margin: 0;
        padding: 0;
      }

      li {
        margin-bottom: var(--space-8);
      }

      a:hover .post-title {
        color: var(--color-accent);
      }

      .date {
        font-size: var(--font-size-xs);
        color: var(--color-writinglist-date);
        text-transform: uppercase;
        letter-spacing: var(--tracking-wider);
      }

      .post-title {
        font-size: var(--font-size-md);
        line-height: var(--leading-tight);
        font-weight: var(--font-weight-medium);
        padding-bottom: var(--space-1);
        border-bottom: var(--border-width-thick) var(--color-writinglist-border) solid;
        transition: all var(--duration-fast) var(--ease-default);
      }

      .post-title :global(.pill) {
        transform: translateY(-0.2em);
        opacity: 0.7;
        transition: opacity var(--duration-fast) var(--ease-default);
      }

      a:hover .post-title :global(.pill) {
        opacity: 1;
      }

      @media screen and (min-width: 800px) {
        .date {
          text-align: right;
          padding-bottom: calc(var(--space-1) + var(--border-width-thick));
        }
        a {
          display: grid;
          gap: var(--space-4);
          grid-template-columns: 10% 5fr 1fr;
          align-items: end;
        }
      }
    </disabled-style>
  </body>
</html>
