---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import Article from '@layouts/Article.astro';
import SmartLink from '@components/mdx/SmartLink.astro';
import BasicImage from '@components/mdx/BasicImage.astro';
import { filterContentForPage } from '@utils/content';

export async function getStaticPaths() {
  const posts = filterContentForPage(await getCollection('articles'));
  return posts.map(post => ({
    params: { slug: post.id },
    props: post,
  }));
}
type Props = CollectionEntry<'articles'>;

const post = Astro.props;
const { Content, remarkPluginFrontmatter } = await render(post);
const readingTime = remarkPluginFrontmatter.minutesRead;
const postData = { ...post.data, readingTime };

// Component prop drilling for automatic enhancements
const components = {
  a: SmartLink,    // Automatic internal/external link handling
  img: BasicImage, // Automatic responsive images with loading states
};
---

<Article {...postData}>
  <Content components={components} />
</Article>
