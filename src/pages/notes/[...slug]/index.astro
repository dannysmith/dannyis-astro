---
import { type CollectionEntry, getCollection, render } from 'astro:content'
import Note from '@layouts/Note.astro'
import SmartLink from '@components/mdx/SmartLink.astro'
import BasicImage from '@components/mdx/BasicImage.astro'
import { filterContentForPage } from '@utils/content';

export async function getStaticPaths() {
  const notes = filterContentForPage(await getCollection('notes'));
  return notes.map((note) => ({
    params: { slug: note.id },
    props: note,
  }))
}
type Props = CollectionEntry<'notes'>

const note = Astro.props
const { Content } = await render(note)

// Component prop drilling for automatic enhancements
const components = {
  a: SmartLink,    // Automatic internal/external link handling
  img: BasicImage, // Automatic responsive images with loading states
}
---

<Note {...note.data}>
  <Content components={components} />
</Note>
