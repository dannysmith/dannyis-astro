---
/**
 * Color System partial - displays all color tokens
 * Shows adaptive palette, absolute colors, and semantic colors
 * All colors are displayed using CSS variables so they update automatically
 */
import ColorSwatch from '@components/mdx/ColorSwatch.astro';

// Color names mapped to their CSS variables
const adaptiveColors = ['coral', 'pink', 'orange', 'purple', 'yellow', 'green', 'blue'];
const absoluteColors = ['white', 'black', 'ink', 'charcoal', 'beige'];

// Semantic colors grouped by category for compact display
const semanticColorGroups = [
  {
    category: 'Accent & Interaction',
    colors: [
      { name: 'Accent', variable: '--color-accent', description: 'Primary brand color, links' },
      { name: 'Visited', variable: '--color-visited', description: 'Visited links' },
      { name: 'Highlight', variable: '--color-highlight', description: 'Text highlights' },
    ],
  },
  {
    category: 'Backgrounds & Surfaces',
    colors: [
      { name: 'Background', variable: '--color-background', description: 'Page background' },
      { name: 'Background Secondary', variable: '--color-background-secondary', description: 'Cards, panels' },
      { name: 'Background Code', variable: '--color-background-code', description: 'Code blocks' },
      { name: 'Surface Raised', variable: '--surface-raised', description: 'Elevated surfaces' },
    ],
  },
  {
    category: 'Text & Borders',
    colors: [
      { name: 'Text', variable: '--color-text', description: 'Body text' },
      { name: 'Text Secondary', variable: '--color-text-secondary', description: 'Muted text' },
      { name: 'Border', variable: '--color-border', description: 'Borders, dividers' },
    ],
  },
];
---

<section id="colors" class="styleguide-section flow">
  <h2>Color System</h2>
  <p>
    All colors are defined using <a href="https://oklch.com/">OKLCH</a> for perceptual uniformity.
    Adaptive colors use <code>light-dark()</code> to automatically adjust for theme.
  </p>

  <!-- Adaptive Palette -->
  <div class="color-subsection">
    <h3>Adaptive Palette</h3>
    <p>
      These colors automatically adjust for light and dark modes. Light mode has lower lightness
      and higher chroma; dark mode increases lightness and reduces chroma for visibility.
    </p>

    <div class="theme-comparison">
      <div class="theme-column light-theme">
        <span class="theme-label">Light Mode</span>
        <div class="color-grid">
          {adaptiveColors.map((color) => {
            const name = color.charAt(0).toUpperCase() + color.slice(1);
            const variable = `--color-${color}`;
            return <ColorSwatch color={`var(${variable})`} name={name} variable={variable} />;
          })}
        </div>
      </div>
      <div class="theme-column dark-theme">
        <span class="theme-label">Dark Mode</span>
        <div class="color-grid">
          {adaptiveColors.map((color) => {
            const name = color.charAt(0).toUpperCase() + color.slice(1);
            const variable = `--color-${color}`;
            return <ColorSwatch color={`var(${variable})`} name={name} variable={variable} />;
          })}
        </div>
      </div>
    </div>
  </div>

  <!-- Absolute Colors -->
  <div class="color-subsection">
    <h3>Absolute Colors</h3>
    <p>Static colors that don't change between themes. Used for specific design elements.</p>
    <div class="absolute-colors-container">
      <div class="color-grid color-grid-wide">
        {absoluteColors.map((color) => {
          const name = color.charAt(0).toUpperCase() + color.slice(1);
          const variable = `--color-${color}`;
          return <ColorSwatch color={`var(${variable})`} name={name} variable={variable} />;
        })}
      </div>
    </div>
  </div>

  <!-- Semantic Colors -->
  <div class="color-subsection">
    <h3>Semantic Colors</h3>
    <p>Role-based colors that map to specific UI purposes. These adapt to the current theme.</p>

    <div class="semantic-table">
      <div class="semantic-header">
        <span class="semantic-col-name">Token</span>
        <span class="semantic-col-swatches">
          <span class="swatch-header">Light</span>
          <span class="swatch-header">Dark</span>
        </span>
        <span class="semantic-col-variable">Variable</span>
        <span class="semantic-col-description">Usage</span>
      </div>

      {semanticColorGroups.map(({ category, colors }) => (
        <>
          <div class="semantic-category">{category}</div>
          {colors.map(({ name, variable, description }) => (
            <div class="semantic-row">
              <span class="semantic-col-name">{name}</span>
              <span class="semantic-col-swatches">
                <span class="swatch-container light-theme">
                  <span class="mini-swatch" style={`background-color: var(${variable})`} />
                </span>
                <span class="swatch-container dark-theme">
                  <span class="mini-swatch" style={`background-color: var(${variable})`} />
                </span>
              </span>
              <span class="semantic-col-variable">{variable}</span>
              <span class="semantic-col-description">{description}</span>
            </div>
          ))}
        </>
      ))}
    </div>
  </div>
</section>

<style>
  .color-subsection {
    margin-top: var(--space-xl);
  }

  .color-subsection:first-of-type {
    margin-top: var(--space-m);
  }

  .color-subsection h3 {
    margin-top: 0;
  }

  /* Color grids */
  .color-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(6rem, 1fr));
    gap: var(--space-m);
  }

  .color-grid-wide {
    grid-template-columns: repeat(auto-fill, minmax(8rem, 1fr));
  }

  /* Theme comparison - side by side */
  .theme-comparison {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-m);
    margin-top: var(--space-m);
  }

  @media (max-width: 640px) {
    .theme-comparison {
      grid-template-columns: 1fr;
    }
  }

  .theme-column {
    padding: var(--space-m);
    border-radius: var(--radius-sm);
    border: var(--border-width-hairline) solid var(--color-border);
  }

  /* Force light mode on light column */
  .light-theme {
    color-scheme: light;
    background-color: var(--color-background);
    color: var(--color-text);
  }

  /* Force dark mode on dark column */
  .dark-theme {
    color-scheme: dark;
    background-color: var(--color-background);
    color: var(--color-text);
  }

  .theme-label {
    display: block;
    font-family: var(--font-ui);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-s);
  }

  /* Absolute colors container */
  .absolute-colors-container {
    padding: var(--space-m);
    background-color: var(--color-background-secondary);
    border-radius: var(--radius-sm);
    border: var(--border-width-hairline) solid var(--color-border);
  }

  /* Semantic colors table */
  .semantic-table {
    margin-top: var(--space-m);
    font-family: var(--font-ui);
    font-size: var(--font-size-sm);
  }

  .semantic-header {
    display: grid;
    grid-template-columns: 10rem 5rem 1fr 1fr;
    gap: var(--space-s);
    padding: var(--space-xs) var(--space-s);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    color: var(--color-text-secondary);
    border-bottom: var(--border-width-hairline) solid var(--color-border);
  }

  .semantic-col-swatches {
    display: flex;
    gap: var(--space-xs);
  }

  .swatch-header {
    width: 2rem;
    text-align: center;
  }

  .semantic-category {
    margin-top: var(--space-m);
    padding: var(--space-2xs) var(--space-s);
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    color: var(--color-text-secondary);
    background-color: var(--color-background-secondary);
    border-radius: var(--radius-xs);
  }

  .semantic-row {
    display: grid;
    grid-template-columns: 10rem 5rem 1fr 1fr;
    gap: var(--space-s);
    padding: var(--space-xs) var(--space-s);
    align-items: center;
    border-bottom: var(--border-width-hairline) solid var(--color-border);
  }

  .semantic-row:last-child {
    border-bottom: none;
  }

  .semantic-col-name {
    font-weight: var(--font-weight-medium);
  }

  .semantic-col-variable {
    font-family: var(--font-code);
    font-size: var(--font-size-xs);
    color: var(--color-text-secondary);
  }

  .semantic-col-description {
    color: var(--color-text-secondary);
    font-size: var(--font-size-xs);
  }

  /* Mini swatches for the table */
  .swatch-container {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-3xs);
    border-radius: var(--radius-xs);
    border: var(--border-width-hairline) solid var(--color-border);
  }

  .mini-swatch {
    display: block;
    width: 1.5rem;
    height: 1.25rem;
    border-radius: var(--radius-xs);
    border: var(--border-width-hairline) solid var(--color-border);
  }

  @media (max-width: 640px) {
    .semantic-header {
      display: none;
    }

    .semantic-row {
      grid-template-columns: 1fr;
      gap: var(--space-2xs);
      padding: var(--space-s);
    }

    .semantic-col-swatches {
      order: -1;
    }

    .swatch-container {
      padding: var(--space-2xs);
    }

    .mini-swatch {
      width: 2.5rem;
      height: 1.75rem;
    }
  }
</style>
