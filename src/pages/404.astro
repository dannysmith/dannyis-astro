---
import { BaseHead, MainNavigation } from '@components/layout/index';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title="404 - Page Not Found"
      description="The page you're looking for doesn't exist."
    />
  </head>
  <body>
    <MainNavigation />
    <main>
      <div class="page-404 ui-style">
        <h1>404</h1>
        <h2>Page Not Found</h2>
        <p>
          Ooops. Try the
          <a href="/">home page</a>?
        </p>
      </div>
    </main>
    <style>
      body {
        max-width: 100%;
        overflow-x: hidden;
      }

      .page-404 {
        position: relative;
        min-height: 80vh;
        min-width: 100%;
        /* Diagonal constructivist-inspired layout:
           Rotate container -45° to create diagonal axis, then offset
           to position "404" prominently in viewport */
        transform-origin: top center;
        transform: rotate(-45deg) translateY(10vh) translateX(-10vh);

        h1 {
          font-family: var(--font-display);
          font-size: 40vw;
          line-height: var(--leading-none);
          font-weight: var(--font-weight-bold);
          margin: 0;

          &::after {
            content: '';
            display: block;
            background: var(--color-accent);
            height: 4vw;
            /* Negative margin overlaps stripe with "404" text.
               Value calculated from font-size (40vw) and desired overlap */
            margin-top: -9.2vw;
            width: 200%;
          }
        }

        h2 {
          font-family: var(--font-display);
          display: inline-block;
          text-transform: uppercase;
          letter-spacing: 0.3vw;
          /* Rotate label 90° from bottom-right corner to create vertical text */
          transform-origin: bottom right;
          transform: rotate(90deg);
          background: var(--color-yellow);
          padding: 0.3vw 0.7vw;
          font-size: 2vw;
          margin: 0;
        }

        p {
          text-transform: uppercase;
          letter-spacing: 0.1rem;
          font-weight: var(--font-weight-light);
          margin: 0 0 0 40vw;
        }

        a {
          color: var(--color-accent);
        }
      }
    </style>
  </body>
</html>
