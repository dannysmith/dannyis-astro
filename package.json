{
  "name": "danny-is-astro",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "sync": "astro sync",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check:types": "tsc --noEmit && astro check",
    "check:all": "pnpm run check:types && pnpm run format:check && pnpm run lint && pnpm run test:all",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:unit": "vitest run tests/unit",
    "test:e2e": "playwright test",
    "test:all": "pnpm run test:unit && pnpm run test:e2e",
    "scrape-toolbox": "tsx scripts/get-toolbox-json.ts",
    "newnote": "tsx scripts/create-note.ts",
    "task:complete": "node scripts/complete-task.js",
    "task:rename-done": "node scripts/complete-task.js --rename-existing"
  },
  "dependencies": {
    "@astrojs/markdown-remark": "^6.3.7",
    "@astrojs/mdx": "^4.3.6",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.6.0",
    "@astropub/icons": "^0.2.0",
    "@fontsource-variable/fira-code": "^5.2.7",
    "@fontsource-variable/league-spartan": "^5.2.8",
    "@iconify-json/heroicons": "^1.2.3",
    "@resvg/resvg-js": "^2.6.2",
    "@vercel/og": "^0.8.5",
    "astro": "^5.14.1",
    "astro-embed": "^0.9.1",
    "astro-expressive-code": "^0.41.3",
    "astro-icon": "^1.1.5",
    "inquirer": "^12.9.6",
    "mdast-util-to-string": "^4.0.0",
    "mermaid": "^11.12.0",
    "puppeteer": "^24.23.0",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-external-links": "^3.0.0",
    "rehype-mermaid": "^3.0.0",
    "satori": "^0.18.3",
    "sharp": "^0.34.4",
    "unfurl.js": "^6.4.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@eslint/js": "^9.36.0",
    "@playwright/test": "^1.55.1",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "^9.36.0",
    "eslint-plugin-astro": "^1.3.1",
    "happy-dom": "^19.0.2",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "zod": "^4.1.11"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "puppeteer",
      "sharp"
    ]
  }
